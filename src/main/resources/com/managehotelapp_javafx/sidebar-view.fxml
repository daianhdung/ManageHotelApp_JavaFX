            <Font name="System Bold" size="15.0" />
         </font>
      </Button>
      <Button fx:id="btnBooking" alignment="CENTER" layoutY="225.0" mnemonicParsing="false" onAction="#onBooking" prefHeight="55.0" prefWidth="210.0" style="-fx-background-color: #00CCFF;" text="BOOKING" textFill="WHITE">
